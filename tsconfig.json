{
  "compilerOptions": {
    "target": "ES2022",
    "rootDir": ".",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "paths": {
      "#root/*": ["./src/*"]
    },
    "allowJs": true,
    "strict": true,
    "outDir": "build",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "preserveWatchOutput": true
  },
	"include": ["src/server/**/*", "src/bot/**/*", "src/db/**/*", "src/config.ts", "src/logger.ts", "src/main.ts", "src/types.d.ts", "src/hc.ts"],
  "exclude": ["node_modules", "src/webapp"]
}
